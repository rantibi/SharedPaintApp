<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/pref_server_details" >
        <EditTextPreference
            android:defaultValue="@string/pref_default_server_address"
            android:key="server_address"
            android:title="@string/pref_server_address" />
        <EditTextPreference
            android:capitalize="words"
            android:defaultValue="@string/pref_default_server_port"
            android:inputType="textCapWords"
            android:key="server_port"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_server_port" />
    </PreferenceCategory>

</PreferenceScreen>